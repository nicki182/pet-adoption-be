generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  password String
  name  String?
  phoneNumber String ?
  role Role    @default(USER)
  cuid  String @default(cuid()) @unique
  @@index([cuid,email])
}

enum Role {
  USER
  ADMIN
}