{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es5",
    "paths": {
      "@/utils/*": ["./src/utils/*"],
      "@/user/*": ["./src/modules/user/*"],
      "@/logger/*":[ "./src/modules/logger/*"],
      "@/animal/*": ["./src/modules/animal/*"],
      "@/session/*":["./src/modules/session/*"],
      "@/redis":["./src/redis/*"]
    },
  },
  "include": ["src", "**/*.ts"],
  "exclude": ["node_modules","test"]
}