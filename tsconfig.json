{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es5",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@user/*": ["./src/modules/user/*"],
      "@animal/*": ["./src/modules/animal/*"],
      "@session/*": ["./src/modules/session/*"],
      "@redis/*": ["./src/DB/redis/*"]
    }
  },
  "include": ["src", "**/*.ts"],
  "exclude": ["node_modules", "test"]
}
