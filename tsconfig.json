{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "strictFunctionTypes": false,
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@user/*": ["src/modules/user/*"],
      "@animal/*": ["src/modules/animal/*"],
      "@session/*": ["src/modules/session/*"],
      "@redis/*": ["src/DB/redis/*"],
      "@prismaAPI/*": ["src/DB/prisma/*"],
      "@graphql/*": ["src/graphql/*"],
      "@error": ["src/modules/error/*"]
    }
  },
  "include": ["src","**/*.ts"],
  "exclude": ["node_modules", "dist", ".nyc_output", "husky"]
}
